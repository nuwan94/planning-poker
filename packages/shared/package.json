{
  "name": "@planning-poker/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities, and constants for Planning Poker application",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/index.js", 
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run rename:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "rename:cjs": "node rename-cjs.cjs",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.1.0"
  },
  "keywords": [
    "planning-poker",
    "shared",
    "types",
    "utilities"
  ]
}